<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="277dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_corner_10_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        style="@style/style_black_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/twenty_dp_margin"
        android:gravity="center" />

    <View
        style="@style/style_seperator_line_h"
        android:layout_marginTop="@dimen/fifteen_dp_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            style="@style/style_666666_18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center" />

        <View style="@style/style_seperator_line_v" />

        <Button
            android:id="@+id/ok_btn"
            style="@style/style_black_18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>