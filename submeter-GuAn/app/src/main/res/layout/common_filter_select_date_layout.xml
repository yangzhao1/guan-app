<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_wrap_vertical"
    android:background="@color/white_color">

    <TextView
        android:id="@+id/tv_common_filter_title"
        style="@style/style_common_filter_title" />

    <View style="@style/style_invitation_details_divider" />

    <LinearLayout style="@style/style_common_filter_select_date_layout">

        <TextView
            android:id="@+id/tv_common_item_start_date"
            style="@style/style_common_filter_select_date"
            android:hint="招标开始时间" />

        <View style="@style/style_common_filter_select_date_divider" />

        <TextView
            android:id="@+id/tv_common_item_end_date"
            style="@style/style_common_filter_select_date"
            android:hint="招标结束时间" />
    </LinearLayout>

</LinearLayout>