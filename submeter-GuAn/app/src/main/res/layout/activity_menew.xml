<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/item_category_bg">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/twenty_dp_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_color">

            <ImageView
                android:id="@+id/headImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/default_headicon"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="廊坊市"
                android:textStyle="bold"
                style="@style/style_black_18"
                android:layout_marginLeft="@dimen/dp_10"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/changePS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:drawablePadding="@dimen/twenty_dp_margin"
                android:drawableLeft="@mipmap/password"
                style="@style/style_black_18"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_icon"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_d8d8d8_color"/>
        <RelativeLayout
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp_margin"
            android:gravity="center_vertical"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:drawablePadding="@dimen/twenty_dp_margin"
                android:drawableLeft="@mipmap/about"
                style="@style/style_black_18"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_icon"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="检查更新"
                android:drawablePadding="@dimen/twenty_dp_margin"
                android:drawableLeft="@mipmap/update"
                style="@style/style_black_18"
                android:layout_marginLeft="@dimen/dp_10"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_icon"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/loginOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp_margin"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white_color">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:gravity="center"
                android:textStyle="bold"
                style="@style/style_black_18"
                android:layout_marginLeft="@dimen/dp_10"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>