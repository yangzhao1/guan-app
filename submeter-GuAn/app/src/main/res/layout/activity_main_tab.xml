<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <View style="@style/style_seperator_line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_bar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_tabview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/four_dp_margin"
                android:drawableTop="@mipmap/home"
                android:gravity="center"
                android:text="@string/home_tab"
                android:textSize="@dimen/font_10_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/category_tabview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/four_dp_margin"
                android:drawableTop="@mipmap/monitor"
                android:gravity="center"
                android:text="@string/category_tab"
                android:textSize="@dimen/font_10_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/message_tabview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/four_dp_margin"
                android:drawableTop="@mipmap/message"
                android:gravity="center"
                android:text="@string/message_tab"
                android:textSize="@dimen/font_10_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/me_tabview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/four_dp_margin"
                android:drawableTop="@mipmap/me"
                android:gravity="center"
                android:text="@string/me_tab"
                android:textSize="@dimen/font_10_size" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>