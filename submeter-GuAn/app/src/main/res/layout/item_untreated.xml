<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white_color"
        android:layout_marginTop="@dimen/five_dp_margin"
        android:layout_marginLeft="@dimen/five_dp_margin"
        android:layout_marginRight="@dimen/five_dp_margin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                style="@style/style_black_18"/>
            <TextView
                android:id="@+id/titleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/white_color"
                style="@style/style_black_12"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_dp_margin"
            android:background="@color/gray_d8d8d8_color"
            android:layout_marginTop="@dimen/dp_4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="80dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:drawableLeft="@mipmap/contacts"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/style_gray_16"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:drawableLeft="@mipmap/telephone"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    style="@style/style_gray_16"/>
            </LinearLayout>
            <TextView
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/style_blue_15"
                android:text="导航"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dp_4"
                android:drawableLeft="@mipmap/arrow_blue_icon"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/untreatedLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                >

                <TextView
                    android:id="@+id/getOutInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="违规详情"
                    android:padding="@dimen/dp_4"
                    android:background="@drawable/blue_corner_10_bg"
                    style="@style/style_blue_15"/>

                <TextView
                    android:id="@+id/processing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="立即处理"
                    android:padding="@dimen/dp_4"
                    android:visibility="gone"
                    android:background="@drawable/blue_corner_10_bg"
                    android:layout_marginLeft="@dimen/twenty_dp_margin"
                    style="@style/style_blue_15"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/processedLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/processed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已经处理"
                    android:padding="@dimen/dp_4"
                    android:background="@drawable/blue_corner_10_bg"
                    style="@style/style_blue_15"/>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>