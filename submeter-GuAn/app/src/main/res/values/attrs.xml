<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="rightPadding" format="dimension"/>
    <attr name="border_sep" format="dimension"/>
    <attr name="border_thickness" format="dimension"/>
    <attr name="border_inside_color" format="reference"/>
    <attr name="border_outside_color" format="reference"/>

    <declare-styleable name="SlidingMenu">
        <attr name="rightPadding"/>
    </declare-styleable>

    <declare-styleable name="roundedimageview">
        <attr name="border_thickness"/>
        <attr name="border_sep"/>
        <attr name="border_inside_color"/>
        <attr name="border_outside_color"/>
    </declare-styleable>

    <declare-styleable name="playerview">
        <attr name="cover" format="integer"/>
        <attr name="buttonColor" format="color"/>
        <attr name="progressEmptyColor" format="color"/>
        <attr name="progressLoadedColor" format="color"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="LoopView">
        <attr name="lineColor" format="color"/>
        <attr name="topBottomTextColor" format="color"/>
        <attr name="centerTextColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="canLoop" format="boolean"/>
        <attr name="initPosition" format="integer"/>
        <attr name="drawItemCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="UserGuideView">

        <attr name="HighlightViewStyle" format="enum">
            <enum name="rect" value="0" />
            <enum name="circle" value="1" />
            <enum name="oval" value="2" />
        </attr>
        <attr name="MaskBlurStyle" format="enum">
            <enum name="solid" value="0" />
            <enum name="normal" value="1" />
        </attr>
        <attr name="tipView" format="reference" />
        <attr name="maskColor" format="reference|color" />
        <attr name="indicator_arrow_up_left" format="reference" />
        <attr name="indicator_arrow_up_right" format="reference" />
        <attr name="indicator_arrow_up_center" format="reference" />
        <attr name="indicator_arrow_down_left" format="reference" />
        <attr name="indicator_arrow_down_right" format="reference" />
        <attr name="indicator_arrow_down_center" format="reference" />

    </declare-styleable>
    
    <declare-styleable name="BannerView">
        <attr name="auto_play" format="boolean" />
        <attr name="interval" format="integer" />
        <attr name="indicator_normal" format="reference" />
        <attr name="indicator_checked" format="reference" />
    </declare-styleable>

    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>

</resources>